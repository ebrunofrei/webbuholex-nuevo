{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "headers": [
    { "source": "/(.*)", "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }] },
    { "source": "/api/(.*)", "headers": [{ "key": "Cache-Control", "value": "s-maxage=300, stale-while-revalidate=600" }] },
    { "source": "/(.*)", "headers": [{ "key": "Content-Security-Policy", "value": "default-src 'self'; img-src 'self' https: data: blob:; media-src 'self' https: blob: data:; font-src 'self' https:; frame-src https:;" }] }
  ],
  "rewrites": [
    { "source": "/api/news/health", "destination": "https://buholex-news-proxy-production.up.railway.app/health" },
    { "source": "/api/health",       "destination": "https://web-production-7b1c4.up.railway.app/health" },

    { "source": "/api/news/(.*)",    "destination": "https://buholex-news-proxy-production.up.railway.app/api/$1" },
    { "source": "/chat-api/(.*)",    "destination": "https://web-production-7b1c4.up.railway.app/api/$1" },

    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
