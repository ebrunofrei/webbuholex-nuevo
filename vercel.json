{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=300, stale-while-revalidate=600"
        }
      ]
    }
  ],
  "rewrites": [
   
    { "source": "/api/health", "destination": "https://web-production-7b1c4.up.railway.app/api/health" },

    { "source": "/api/(.*)", "destination": "https://buholex-news-proxy-production.up.railway.app/api/$1" },

    { "source": "/chat-api/(.*)", "destination": "https://web-production-7b1c4.up.railway.app/api/$1" },

    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
