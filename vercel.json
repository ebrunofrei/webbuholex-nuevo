{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=300, stale-while-revalidate=600" }
      ]
    }
  ],
  "rewrites": [
   
    { "source": "/api/:path*",   "destination": "https://api.buholex.com/api/:path*"  },
    { "source": "/media/:path*", "destination": "https://api.buholex.com/media/:path*"},

       { "source": "/(.*)", "destination": "/index.html" }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "buholex.com" }],
      "destination": "https://www.buholex.com/:1",
      "permanent": true
    }
  ]
}
