{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/api/(noticias|noticias-juridicas)",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=300, stale-while-revalidate=600" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/noticias",
      "destination": "https://tu-backend-en-railway.app/api/noticias"
    },
    {
      "source": "/api/noticias-juridicas",
      "destination": "https://tu-backend-en-railway.app/api/noticias-juridicas"
    },
    { "source": "/api/ia", "destination": "/api/ia.js" },
    { "source": "/firebase-messaging-sw.js", "destination": "/firebase-messaging-sw.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
