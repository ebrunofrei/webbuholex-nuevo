{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=300, stale-while-revalidate=600" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' https: data:; script-src 'self' 'unsafe-eval' 'unsafe-inline'; connect-src 'self' https://*.railway.app https://*.vercel.app; media-src 'self' blob: data: https:; font-src 'self' data: https:;"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/health", "destination": "https://web-production-7b1c4.up.railway.app/api/health" },

  
    { "source": "/api/noticias", "destination": "https://buholex-news-proxy-production.up.railway.app/api/news" },

    
    { "source": "/api/(.*)", "destination": "https://buholex-news-proxy-production.up.railway.app/api/$1" },

   
    { "source": "/chat-api/(.*)", "destination": "https://web-production-7b1c4.up.railway.app/api/$1" },

    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
